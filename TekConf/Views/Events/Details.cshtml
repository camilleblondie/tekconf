@model TekConf.Models.EventDetailsViewModel

@{
    ViewBag.Title = "Event " + Model.Event.name;
}
<header class="text-center">
    <h1>@Model.Event.name</h1>
    <h5>On @Model.Event.time.Date.ToShortDateString() at @Model.Event.time.TimeOfDay</h5>
</header>
<div class="gap"></div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <p>@Model.Event.description</p>
        </div>
        <div class="col-md-4">
            <p><a href="@Model.Event.event_link">@Model.Event.event_link</a></p>
            <p>@Model.attendees.Count attendees</p>
            <a href="#">Add to my Google Calendar</a>
        </div>
    </div>
    <div class="gap"></div>
    <div class="row">
        <div class="col-md-offset-1">
            <iframe src="@ViewBag.videoLink" width="800" height="400"></iframe>
        </div>
    </div>
    <div class="row">
        <h4>Speakers</h4>
        <ul>
            @foreach (AspNetUsers user in Model.speakers)
            {
                <li>@user.Firstname @user.Lastname</li>
            }
        </ul>
    </div>
    <div class="row">
        <h4>Technologies</h4>
        @foreach (Technology technology in Model.technologies)
        {
            <span class="label label-primary">@technology.name</span>
        }
    </div>


    <div class="gap"></div>

    <div class="row">
        <div class="col-md-8">
            <p>Google Maps</p>
        </div>
        <div class="col-md-4">
            @Model.Event.location
        </div>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Event.id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
