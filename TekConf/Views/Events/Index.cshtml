</div>

<script type="text/javascript">
    var geocoder;
    var map;
    var center;

    $(document).ready(function () {
        var input = document.getElementById('Event_location');
        var options = {
        };
        autocomplete = new google.maps.places.Autocomplete(input, options);
        InitMap(true, '#yolo');


        $('#searchSubmit').click(function (e) {
            var selectedAddress = 'no';
            if ($('#Event_location').val())
                selectedAddress = $('#Event_location').val();
            console.log(selectedAddress);

            e.preventDefault();
            $.post('/Events/Search', $('#searchForm').serialize(), function (data) {
                $("#results").empty();
                if (data.length <= 0)
                    $("#results").append('No event found!');
                for (i = 0; i < data.length; ++i)
                {
                    var ev = data[i];
                    var eventDate = new Date(ev.time);
                    var eventDateMonth = eventDate.getMonth() + 1;
                    console.log("eventdate: " + eventDate);
                    console.log(ev.location);
                    curAddress = ev.location;
                    if (selectedAddress == 'no' || selectedAddress == curAddress) {
                        InitMap(false, curAddress);
                        $("#results").append('<a href="/Events/Details/' + ev.id + '" class="list-group-item"> \
                        <div class="row"> \
                            <div class="col-md-9"> \
                                <h4 class="list-group-item-heading">'
                                        + ev.name + ' <small>' + eventDate.getDate() + "/" + eventDateMonth + "/" + eventDate.getFullYear() + '</small> \
                                </h4> \
                                <p class="list-group-item-text">' + ev.description + '</p> \
                            </div> \
                            <div class="col-md-3 see-more-btn"> \
                                <p class="btn btn-primary btn-sm"> See More </p> \
                            </div> \
                        </div> \
                    </a>');
                    }
                }
            });
            if (selectedAddress.length != 0) {
                InitMap(false, curAddress);
            }
        });
    });

    function InitMap(first, curAddress) {
        if (first == true) {
            function initialize() {
                geocoder = new google.maps.Geocoder();
                var mapOptions = {
                    center: center,
                    zoom: 12
                };
                map = new google.maps.Map(document.getElementById('map-canvas'),
                    mapOptions);
            }
        } else {
            codeAddress(curAddress);
        }

        function codeAddress(curAddress) {
            var address = curAddress;
            geocoder.geocode({ 'address': address }, function (results, status) {
                if (status == google.maps.GeocoderStatus.OK) {
                    center = results[0].geometry.location;
                    map.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: map,
                        position: results[0].geometry.location
                    });
                } else {
                    alert('Geocode was not successful for the following reason: ' + status);
                }
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    };
</script>