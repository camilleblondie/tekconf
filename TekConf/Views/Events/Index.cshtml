@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2 class="text-center">Events <span class="text-center">
    @Html.ActionLink("Add a new event", "Create", new { }, new { @class = "btn btn-primary btn-sm" })
</span></h2>

    

    <h3>Find an event</h3>
    @using (Html.BeginForm("Search", "Events", FormMethod.Post, new { id = "searchForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Near", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Near", new { htmlAttributes = new { @class = "form-control", id = "Event_location", placeholder = "Enter a place" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("On", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="Month" class="form-control">
                        <option selected="selected"></option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                    <select name="Year" class="form-control">
                        <!--<option selected="selected"></option>-->
                        <option value="2015" selected="selected">2015</option>
                        <option value="2016">2016</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Technologies", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="js-example-basic-multiple" multiple="multiple" name="technologies[]">
                        @foreach (Technology t in ViewBag.technologies)
                        {
                            <option value="@t.id">@t.name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Topic", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Topic", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search!" class="btn btn-default" id="searchSubmit" />
                </div>
            </div>

        </div>
    }


    <div class="gap"></div>

    <div class="row">
        <div class="col-md-8" style="height: 300px;">
            <div id="map-canvas"></div>
        </div>
        <div class="col-md-4">
            <h4>Event address</h4>
            <p>#YOLO</p>
        </div>
    </div>

